    }
    
    public int lengthToLeaf()
    {
    	
    	
    	return -1;
    }

    public static void main(String[] args) throws Exception
    {
    	CompetitionDijkstra d = new CompetitionDijkstra("tinyEWD.txt", 75, 75, 75);
    	System.out.println(d.timeRequiredforCompetition());
    }
    
}

